<% include ../partials/head %>
<% include ../partials/header %>  
<div
class='bg-img bg-main-header'
style='background-image:url("img/bg/bg1.jpg")'>
  <div class='bg-center-container'>
    <h1 class='bg-heading'>
      Lab News
    </h1>
  </div>
</div>
<div class='grid-container add-padd' >
  <% for (let i = 0; i < results.length; i++) { %>
    <div class='grid-x grid-padding-x grid-padding-y' data-equalizer>
      <% if(i % 2) {%>
      <div class='medium-3 cell center out-vc' data-equalizer-watch>
        <div class='in-vc'>
          <img src='<%=results[i].image %>' alt='<%-results[i].name %>'/>
        </div>
      </div>
      <% } %>
      <div class='medium-9 auto out-vc' data-equalizer-watch>
        <div class='in-vc'>
          <h4><%-results[i].name %></h4>
          <p class="web-pro-text">
            <%-results[i].description %>
          </p>
        </div>
      </div>
      <% if(!(i % 2)) {%>
      <div class='medium-3 cell out-vc' data-equalizer-watch>
        <div class='in-vc'>
          <img src='<%=results[i].image %>' alt='<%-results[i].name %>'/>
        </div>
      </div>
      <% } %>
    </div>
  <% } %>
</div>



<% include ../partials/footer %>
<% include ../partials/tail %>
  
